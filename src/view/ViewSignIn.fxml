<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignInController">
    <children>
        <AnchorPane fx:id="panelSignIN" maxHeight="-1.0" maxWidth="-1.0" prefHeight="480.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="140.0" layoutY="133.0" prefHeight="27.0" prefWidth="74.0" text="Usuario :" />
                <TextField fx:id="tfUser" layoutX="224.0" layoutY="134.0" prefHeight="26.0" prefWidth="246.0" />
                <Label layoutX="140.0" layoutY="195.0" prefHeight="27.0" prefWidth="98.0" text="Contraseña : " />
                <PasswordField fx:id="tfPassword" layoutX="226.0" layoutY="195.0" prefHeight="26.0" prefWidth="246.0" />                             
                <Label alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" layoutX="138.0" layoutY="272.0" prefHeight="20.0" prefWidth="200.0" text="¿ Aun no te has registrado? " />
                <Hyperlink fx:id="hyperSignUP" layoutX="357.0" layoutY="266.0" onAction="#signUp" prefHeight="20.0" prefWidth="130.0" text="Resgistrate" />
                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="138.0" layoutY="320.0" prefHeight="20.0" prefWidth="200.0" text="¿Has olvidado tu contraseña?" />
                <Hyperlink fx:id="hpResetPass" layoutX="357.0" layoutY="313.0" prefHeight="20.0" prefWidth="160.0" text="Recuperar contraseña" />
                <Button fx:id="btnSignIN" layoutX="207.0" layoutY="364.0" mnemonicParsing="false" onAction="#signIN" prefHeight="34.0" prefWidth="259.0" text="Iniciar Sesion" />
                <Label fx:id="lblError" focusTraversable="false" layoutX="113.0" layoutY="14.0" prefHeight="94.0" prefWidth="414.0" />
            </children>
        </AnchorPane>
    </children>
</VBox>
